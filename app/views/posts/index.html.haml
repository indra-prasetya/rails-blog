- model_class = Post
.container
  .row
    .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
      - @posts.each do |post|
        .post-preview
          %a{:href => "post.html"}
            %h2.post-title
              = link_to post.title, post_path(post)
            %h3.post-subtitle
              = post.description              
          %p.post-meta
            Posted on 
            =l post.created_at
        %hr/
      / Pager
      %ul.pager

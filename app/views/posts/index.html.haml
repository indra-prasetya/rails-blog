- model_class = Post
.container
  .row
    .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
      - @posts.each do |post|
        .post-preview
          %a{:href => '/' + post.slug}
            %h2.post-title
              = post.title
            %h3.post-subtitle
              = post.description              
          %p.post-meta
            Posted by Indra on 
            %time
              = post.updated_at.strftime("%b %d, %Y")
        %hr/
      / Pager
      %ul.pager
        %li.next
          = link_to_next_page @posts, 'Older Posts â†’'

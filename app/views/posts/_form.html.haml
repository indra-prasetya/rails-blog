= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :slug
    = f.text_field :slug
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :category_id
    = f.number_field :category_id
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :is_published
    = f.check_box :is_published
  .actions
    = f.submit 'Save'
